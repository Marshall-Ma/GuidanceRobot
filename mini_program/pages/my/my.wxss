/* pages/my/my.wxss */
.container{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
  .not-authoried{
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    background-color: #0097ff;
  }
  
  .authrized{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    background-color: #0097ff;
  }
  .avatar {
    width: 96rpx;
    height: 96rpx;
    overflow: hidden;
    border-radius: 50%;
    margin-left: 56rpx;
  }
  .avatar-nickname{
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
  }
  
  .login-text{
    line-height:40rpx;
    font-size: 40rpx;
    color: #fff;
    padding-left:10rpx;
  }
  
  .setting{
    width: 56rpx;
    height: 56rpx;
    padding-right:80rpx; 
  }

  
  .title-text{
    width: 100%;
    font-weight: bold;
    padding-left: 56rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .nav-container{
    align-items: center;
  }
  